# Special .htaccess file for Windows browser compatibility
# Copy this to the root of your Hostinger hosting to fix download issues

# Enable rewrite engine
RewriteEngine On

# Set the base for rewrites
RewriteBase /

# Force all service pages to have .html extension for Windows compatibility
# Example: /ai-automation -> /ai-automation.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(ai-automation|business-process-automation|business-process-documentation)$ $1.html [R=301,L]

# Force all service location pages to have .html extension
# Example: /ai-automation/london -> /ai-automation/london.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(ai-automation|business-process-automation|business-process-documentation)/([^/]+)$ $1/$2.html [R=301,L]

# If a file or directory exists, serve it directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Direct access to static assets in the out directory
RewriteRule ^out/(.*)$ out/$1 [L]

# Send all other requests to index.php
RewriteRule ^(.*)$ index.php [L]

# Set proper MIME types
AddType application/javascript .js
AddType text/css .css
AddType image/svg+xml .svg
AddType application/json .json
# Force Windows to recognize HTML files correctly
AddType text/html .html
AddType text/html .htm

# Force HTML response for service pages
<FilesMatch "\.(html|htm)$">
    ForceType text/html
    Header set Content-Type "text/html; charset=UTF-8"
    Header set Content-Disposition "inline"
    Header unset Content-Encoding
    # Windows-specific browser headers
    Header set X-Content-Type-Options "nosniff"
    Header set X-UA-Compatible "IE=edge"
</FilesMatch>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresDefault "access plus 2 days"
</IfModule>

# Compress files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>
